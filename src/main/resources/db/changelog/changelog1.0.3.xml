<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="add_product" author="v.lymar">
        <modifyDataType
                columnName="password"
                newDataType="varchar(256)"
                tableName="users"/>
    </changeSet>
    <changeSet id="add-column" author="v.lymar">
        <addColumn tableName="product">
            <column name="price" type="NUMERIC"/>
        </addColumn>
    </changeSet>
    <changeSet id="change reveiw_table" author="v.lymar">
        <addColumn tableName="review">
            <column name="is_moderated" type="boolean" defaultValue="false"/>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_user_id" references="users(id)"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="add column" author="v.lymar">
        <addColumn tableName="users">
            <column name="email" type="varchar(64)"/>
        </addColumn>
    </changeSet>
    <changeSet id="change_column" author="v.lymar">
        <update tableName="review">
            <column name="is_moderated" type="boolean">
                <constraints nullable="false"/>
            </column>
        </update>
    </changeSet>
</databaseChangeLog>